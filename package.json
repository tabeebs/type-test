{
  "name": "wpm-typing-test",
  "version": "1.0.0",
  "description": "A WPM typing test application",
  "main": "script.js",
  "scripts": {
    "test": "jest --watchAll=false",
    "test:watch": "jest --watchAll",
    "dev": "npx http-server -p 3000 -o",
    "lint": "eslint *.js --fix",
    "format": "prettier --write *.js *.css *.html"
  },
  "keywords": ["typing", "test", "wpm", "speed", "typing-test"],
  "author": "TypeTest",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
} 